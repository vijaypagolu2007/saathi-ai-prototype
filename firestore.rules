
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow users to read and write to their own user document (e.g., for growth points)
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Allow users to read and write their own journal entries
      match /journal/{journalId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Allow users to read and write their own mood entries
      match /moods/{moodId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
